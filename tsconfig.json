{
  "compilerOptions": {
    "esModuleInterop": true, // 允许使用import和export
    "allowSyntheticDefaultImports": true, // 允许使用默认导入
    "typeRoots": ["./src/interface", "./node_modules/@types", "./src/types"],
    "types": ["node", "three"],
    // "module": "Node16",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "baseUrl": "src"
  },
  "paths": {
    "@/core/*": ["./src/core/*"],
    "@/*": ["./src/*"], // 补全相对路径基准点
    "three": ["node_modules/three/src/Three"]
  }
}
