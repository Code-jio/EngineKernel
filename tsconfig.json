{
    "compilerOptions": {
        "esModuleInterop": true, // 允许使用import和export
        "allowSyntheticDefaultImports": true, // 允许使用默认导入
        "typeRoots": [
            "./src/interface",
            "./node_modules/@types",
            "./src/types"
        ],
        "types": [
            "node",
            "three"
        ],
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "dom"
        ],
        "skipLibCheck": true,
        "strict": true,
        "declaration": true,
        "baseUrl": "src",
    },
    "paths": { 
      "@/*": ["src/*"],
      "three": ["node_modules/three"]
    }
}