{
    "compilerOptions": {
        "esModuleInterop": true, // 允许使用import和export
        "allowSyntheticDefaultImports": true, // 允许使用默认导入
        "typeRoots": [
            "./src/interface",
            "./node_modules/@types",
            "./src/types"
        ],
        "types": [
            "node"
        ],
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "dom"
        ],
        "skipLibCheck": true,
        "strict": true,
        "declaration": true,
        "baseUrl": ".",
        "paths": { "@/*": ["src/*"] }
    }
}